<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@android:color/holo_orange_light"
        android:padding="12dp"
        android:text="Rekha G \nOutthinking\nBangalore"
        android:textSize="24dp" />


    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/holo_orange_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_above="@+id/sub_price_txt"
        android:padding="8dp">

        <EditText
            android:layout_gravity="center_vertical"

            android:layout_weight="0.64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>

        <Button
            android:layout_margin="4dp"
            android:text="Apply Coupon"
            android:layout_weight="0.36"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:padding="8dp"
        android:id="@+id/sub_price_txt"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Sub Total Price $150"
        android:layout_above="@+id/shipping_price_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>
    <TextView
        android:padding="8dp"
        android:id="@+id/shipping_price_txt"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Shipping Price $50"
        android:layout_above="@+id/total_price_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>
        <TextView
            android:padding="8dp"
            android:id="@+id/total_price_txt"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:background="@android:color/holo_orange_light"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Total Price $200"
            android:layout_above="@+id/card_pay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/card_pay_btn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay By Card"/>
</RelativeLayout>